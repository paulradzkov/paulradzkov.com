<!DOCTYPE html>
<html class="no-js" lang="ru">
<head>
    <!-- Standard Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Site Properities -->
    <title><%= @getPreparedTitle() %></title>
    <meta name="description" content="<%= @getPreparedDescription() %>" />
    <meta name="keywords" content="<%= @getPreparedKeywords() %>" />
    <meta name="viewport" content="width=device-width,initial-scale=1"/>

    <!-- DocPad Meta -->
    <%- @getBlock('meta').toHTML() %>

    <!-- DocPad Styles + Our Own -->
    <%- @getBlock('styles').add([].concat(@site.styles or []).concat(@document.styles or [])).toHTML() %>

    <!-- Icons -->
    <!-- Favicon -->
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="alternate" type="application/atom+xml" title="Atom" href="/atom.xml">
    <link rel="alternate" type="application/rss+xml" title="RSS" href="/rss.xml">
    <link rel="canonical" href="<%= @site.canonicalUrl %><%= @document.url %>">
    <meta property="fb:pages" content="297287297277384" />

    <%- @partial('webfontsjs', { pathtofonts: '/fonts/webfonts.css?v=0.0.1' }) %>
    <%- @partial('opengraph') %>
    <%- @partial('twittercard') %>
    <%- @partial('googleAnalytics') %>
</head>
<body class="allpage allpage-max-width allpage-stickyfooter layout-<%- @document.kind %>">
    <% if ((!@document.kind) or (@document.kind != 'article')) : %>
        <header class="site-header content-width">
            <%- @partial('hero') %>
        </header>
    <% end %>
    <% if (@document.kind == 'article') : %>
    <header class="allpage--header page-header">
        <div class="article-nav">
            <nav class="read-siblings">
                <%- @getNavLinks() %>
            </nav>
            <nav class="site-navigation sticky-nav" id="sticker">
                <a class="nav-icon nav-icon-centered js-menu-trigger" href="/" data-toggle="tooltip" data-placement="right" title="На главную"><img src="/i/home.svg" width="28" height="28" alt="На главную" onerror="this.onerror=null; this.src='/i/home.png'" /><span class="visuallyhidden">На главную</span></a>
            </nav>
        </div>
        <aside class="nav-placeholder content-width">
            <div class="article-meta ">
            <% if (@document.created_at) : %>
                <p class="date"><time datetime="<%= @document.created_at %>"><%=@moment(@document.created_at).lang('ru').format('DD MMMM YYYY') %></time></p>
            <% end %>
            </div>
        </aside>
        <div class="content-width">
            <h1 class="article-title"><%- @document.title %></h1>
        </div>
        <aside class="content-width">
            <div class="article-meta inlined">
                <% if (@document.tags) : %>
                <span class="tags-list">
                    <% for tag in @document.tags : %>
                        <a class="tag" href="<%= @getTagUrl(tag) %>"><%= tag %></a>
                    <% end %>
                </span>
                <% end %>
                <% if ((@site.disqus_shortname) and (@document.disqusid)) : %>
                <span class="comments"><a href="<%= @document.path %>#disqus_thread" data-disqus-identifier="<%= @document.disqusid %>" >Комментарии</a></span>
                <% end %>
                <span class="pageviews" style="display:none"></span>
            </div>
        </aside>

    </header>
    <% end %>
    <%if (@document.expired == true) : %>
    <%- @partial('expired') %>
    <% end %>
    <article class="allpage--body nav-placeholder content-width" role="main">
        <%- @content %>
    </article>
    <%- @partial('likely') %>
    <%- @partial('footer') %>
    <% if ((@site.disqus_shortname) and (@document.kind == 'article')) : %>
    <div class="disqus-wrapper">
        <article id="disqus_thread" class="disqus-container"></article>
    </div>
    <% end %>
    <% if (@document.kind == 'article') : %>
    <h4 class="read-next-title">Читать дальше:</h4>
    <nav class="read-next">
        <%- @getNavLinks() %>
    </nav>
    <% end %>
    <%- @partial('scripts') %>
</body>
</html>
